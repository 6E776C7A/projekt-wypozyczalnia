{% if status %}
    <div class="container" style="margin-top: 1rem;">
        {% if status == 'added' %}
            <div style="background-color: #d4edda; color: #155724; padding: 1rem; border-radius: 5px; border: 1px solid #c3e6cb;">
                ✅ Samochód został pomyślnie dodany!
            </div>
        {% elseif status == 'deleted' %}
            <div style="background-color: #d4edda; color: #155724; padding: 1rem; border-radius: 5px; border: 1px solid #c3e6cb;">
                ✅ Samochód został pomyślnie usunięty!
            </div>
        {% elseif status == 'error' %}
            <div style="background-color: #f8d7da; color: #721c24; padding: 1rem; border-radius: 5px; border: 1px solid #f5c6cb;">
                ❌ Wystąpił błąd podczas dodawania samochodu. Sprawdź czy wszystkie pola są wypełnione poprawnie.
            </div>
        {% endif %}
    </div>
{% endif %}
