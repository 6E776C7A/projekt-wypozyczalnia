<header class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
    <div class="container">
        <nav class="navbar-nav w-100 d-flex justify-content-between align-items-center">
            {# Zbuduj URL do /offers z zachowaniem dat jeśli dostępne #}
            {% set df = dates.from is defined and dates.from ? dates.from : null %}
            {% set dt = dates.to is defined and dates.to ? dates.to : null %}
            {% set offersUrl = '/offers' %}
            {% if df and dt %}
                {% set offersUrl = '/offers?date_from=' ~ df ~ '&date_to=' ~ dt %}
            {% endif %}
            {% if current_path == '/' %}
                <span class="navbar-brand mb-0 h1 text-white-50">Leasing Pro</span>
            {% else %}
                <a href="{{ offersUrl }}" class="navbar-brand mb-0 h1 text-white text-decoration-none">Leasing Pro</a>
            {% endif %}
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="/admin" class="nav-link text-white">Panel admina</a>
                </li>
            </ul>
        </nav>
    </div>
</header>
