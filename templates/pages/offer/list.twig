{% extends 'layouts/base.twig' %}

{% block title %}Wszystkie pojazdy | {{ parent() }}{% endblock %}

{% block content %}
    <section class="offers-list py-5">
        <div class="container">
            {# Header: tytuł, pod nim przycisk zmiany terminu, a następnie zakres dat #}
            <div class="mb-4">
                <h1 class="h2 mb-1">Dostępne pojazdy</h1>
                <div class="mt-2">
                    <a href="/reset-dates" class="btn btn-danger btn-sm">Zmień termin</a>
                </div>
                {% if dates.from and dates.to %}
                    <p class="text-muted mb-0 mt-2">Termin: <strong>{{ dates.from }}</strong> — <strong>{{ dates.to }}</strong></p>
                {% endif %}
            </div>

            {# Filtry wyszukiwania #}
            <div class="mb-5">
                {% include 'partials/offer/_filters.twig' %}
            </div>

            {# Aktywne filtry + przycisk do anulowania #}
            {% set f = filters|default({}) %}
            {% set hasFilters = (f.category is defined and f.category) or (f.transmission is defined and f.transmission) or (f.max_price is defined and f.max_price) or (f.make is defined and f.make) or (f.model is defined and f.model) or (f.seats is defined and f.seats) or (f.sort is defined and f.sort != 'price_asc') %}
            
            {% if status == 'booked' %}
                <div class="mb-4 alert alert-success auto-hide" role="alert" data-hide-delay="5000">
                    Rezerwacja przyjęta! Auto nie będzie już widoczne w tym terminie.
                </div>
            {% elseif status == 'cancelled' %}
                <div class="mb-4 alert alert-info auto-hide" role="alert" data-hide-delay="5000">
                    Rezerwacja została anulowana. Auto wróciło do puli dostępnych pojazdów.
                </div>
            {% endif %}

            {% if hasFilters %}
                <div class="mb-5" style="background: #f8f9fa; padding: 1rem; border-radius: 8px; display: flex; align-items: center; gap: 0.75rem; flex-wrap: wrap;">
                    <strong>Aktywne filtry:</strong>
                    {% if f.category %}<span class="badge bg-light text-dark">Kategoria: {{ f.category }}</span>{% endif %}
                    {% if f.transmission %}<span class="badge bg-light text-dark">Skrzynia: {{ f.transmission }}</span>{% endif %}
                    {% if f.make %}<span class="badge bg-light text-dark">Marka: {{ f.make }}</span>{% endif %}
                    {% if f.model %}<span class="badge bg-light text-dark">Model: {{ f.model }}</span>{% endif %}
                    {% if f.seats %}<span class="badge bg-light text-dark">Miejsca: {{ f.seats }}</span>{% endif %}
                    {% if f.max_price %}<span class="badge bg-light text-dark">Max cena: {{ f.max_price }}</span>{% endif %}
                    {% if f.sort and f.sort != 'price_asc' %}<span class="badge bg-light text-dark">Sort: Najpierw droższe</span>{% endif %}

                    <a href="/offers" class="btn btn-sm btn-danger ms-auto">Wyczyść filtry</a>
                </div>
            {% endif %}

            {# Wyniki #}
            {% if cars is empty %}
                <div class="text-center py-5">
                    <div class="alert alert-warning" role="alert">
                        <h4 class="alert-heading">Brak dostępnych pojazdów</h4>
                        <p class="mb-0">W wybranym terminie nie ma dostępnych pojazdów spełniających kryteria wyszukiwania.</p>
                    </div>
                </div>
            {% else %}
                <div class="row g-4">
                    {% for car in cars %}
                        <div class="col-md-6 col-lg-4">
                            {% include 'partials/offer/_card.twig' with { car: car } %}
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}
