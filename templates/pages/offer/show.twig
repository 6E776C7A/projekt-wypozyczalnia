{% extends 'layouts/base.twig' %}

{% block title %}Szczegóły oferty | {{ parent() }}{% endblock %}

{% block content %}
<section class="d-flex py-5 min-vh-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <h1 class="text-center text-primary mb-4 fw-bold">{{ car.make }} {{ car.model }}</h1>
                        {% if status == 'booked' %}
                            
                        {% elseif status == 'invalid_form' %}
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                Uzupełnij poprawnie dane (imię, nazwisko, e-mail).
                            </div>
                        {% elseif status == 'invalid_dates' %}
                            <div class="alert alert-warning" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                Nieprawidłowy zakres dat. Wróć do listy i ustaw termin.
                            </div>
                        {% elseif status == 'captcha_error' %}
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                Proszę zaznaczyć reCAPTCHA przed złożeniem rezerwacji.
                            </div>
                        {% endif %}

                        <div class="row g-4">
                            <div class="col-md-12">
                                <div class="position-relative d-flex justify-content-center">
                                    {% if car.image_url %}
                                        <div class="ratio ratio-4x3" style="max-width: 400px; margin: 0 auto;">
                                            <img src="{{ car.image_url }}" alt="{{ car.make }} {{ car.model }}"
                                            class="img-fluid rounded-3 shadow object-fit-cover"
                                            style="object-position: center; width: 100%; height: 100%;">
                                        </div>
                                    {% else %}
                                        <div class="bg-light rounded-3 d-flex align-items-center justify-content-center" style="height: 300px;">
                                            <div class="text-muted text-center">
                                                <i class="bi bi-image display-4"></i>
                                                <p class="mt-2">Brak zdjęcia</p>
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <div>
                                <div class="col-md-12">
                                    <div class="card no-hover bg-light border-0 mb-4">
                                        <div class="card-body">
                                            <h5 class="card-title mb-3">
                                                <i class="bi bi-info-circle me-2"></i>Specyfikacja pojazdu
                                            </h5>
                                            <ul class="list-unstyled mb-0">
                                                <li class="d-flex justify-content-between py-2 border-bottom">
                                                    <strong>Kategoria:</strong>
                                                    <span class="badge bg-primary">{{ car.category }}</span>
                                                </li>
                                                <li class="d-flex justify-content-between py-2 border-bottom">
                                                    <strong>Skrzynia biegów:</strong>
                                                    <span class="badge bg-secondary">{{ car.transmission }}</span>
                                                </li>
                                                <li class="d-flex justify-content-between py-2 border-bottom">
                                                    <strong>Miejsca:</strong>
                                                    <span class="badge bg-info">{{ car.seats }}</span>
                                                </li>
                                                <li class="d-flex justify-content-between py-2 border-bottom">
                                                    <strong>Doba (dni robocze):</strong>
                                                    <span class="text-success fw-bold">{{ car.workday_price|number_format(2, ',', ' ') }} zł</span>
                                                </li>
                                                <li class="d-flex justify-content-between py-2">
                                                    <strong>Doba (weekend):</strong>
                                                    <span class="text-primary fw-bold">{{ car.weekend_price|number_format(2, ',', ' ') }} zł</span>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                                <div class="card no-hover text-white bg-primary border-0 mb-4">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">
                                            Podsumowanie
                                        </h5>
                                        <p class="mb-2">Termin: <strong>{{ dates.from }}</strong> — <strong>{{ dates.to }}</strong></p>
                                        {% if total_price is not null %}
                                            <div class="total-price mb-2 fw-bold">Cena: {{ total_price|number_format(2, ',', ' ') }} zł</div>
                                        {% endif %}
                                        <h6 class="card-title text-red">
                                            Rezerwacji nie można anulować na 48 godzin przed terminem odbioru samochodu.
                                        </h6>
                                    </div>
                                </div>

                                <div class="card no-hover border-0 shadow-sm">
                                    <div class="card-body">
                                        <h5 class="card-title mb-3">
                                            <i class="bi bi-person-fill me-2"></i>Dane wypożyczającego
                                        </h5>
                                        <form method="POST" action="/offers/{{ car.id }}/book">
                                            <div class="row g-3">
                                                <div class="col-md-6">
                                                    <label for="first_name" class="form-label">Imię</label>
                                                    <input type="text" class="form-control" id="first_name" name="first_name" required>
                                                </div>
                                                <div class="col-md-6">
                                                    <label for="last_name" class="form-label">Nazwisko</label>
                                                    <input type="text" class="form-control" id="last_name" name="last_name" required>
                                                </div>
                                                <div class="col-12">
                                                    <label for="email" class="form-label">E-mail</label>
                                                    <input type="email" class="form-control" id="email" name="email" required>
                                                </div>
                                                
                                                <div class="col-12 text-center">
                                                    <p class="text-muted small mb-2">
                                                        <i class="bi bi-shield-check me-1"></i>
                                                        Przed złożeniem rezerwacji, potwierdź że nie jesteś robotem:
                                                    </p>
                                                    <div id="g-recaptcha" class="g-recaptcha d-inline-block" data-sitekey="6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI"></div>
                                                </div>
                                                
                                                <div class="col-12 d-flex gap-3">
                                                    <a href="/offers" class="btn btn-secondary flex-fill">
                                                        <i class="bi bi-arrow-left me-2"></i>Wróć
                                                    </a>
                                                    <button type="submit" class="btn btn-primary mt-auto">
                                                        <i class="bi bi-check-circle me-2"></i>Zarezerwuj
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}
